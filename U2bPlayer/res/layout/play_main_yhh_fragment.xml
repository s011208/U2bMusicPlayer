<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/tab_parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tab_local_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/play_main_tab_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="@string/tab_local_music"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tab_web_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/play_main_tab_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="@string/tab_web_music"
            android:textColor="#fff"
            android:textSize="22sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/play_main_fragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_parent" />

</RelativeLayout>