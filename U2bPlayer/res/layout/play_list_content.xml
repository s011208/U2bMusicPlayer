<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/play_list_view_item_height" >

    <ImageView
        android:id="@+id/play_list_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/play_list_artist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/play_list_view_artist_height"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/play_list_thumbnail"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:padding="3dp"
        android:textColor="#fff"
        android:textSize="@dimen/play_list_view_artist_textsize" />

    <TextView
        android:id="@+id/play_list_music"
        android:layout_width="match_parent"
        android:layout_height="@dimen/play_list_view_music_height"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/play_list_thumbnail"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="#fff"
        android:textSize="@dimen/play_list_view_music_textsize" />

</RelativeLayout>