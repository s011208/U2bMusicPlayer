<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="4dp"
                android:color="#45000000" />

            <corners android:radius="10dp" />

            <padding
                android:bottom="3dp"
                android:right="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="4dp"
                android:color="#99ffffff" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="315"
                android:endColor="#90000000"
                android:startColor="#30000000" />

            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>